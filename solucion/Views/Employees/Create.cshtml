@{
    ViewData["Title"] = "Create Page";
    <link rel="stylesheet" href="~/css/employees.css" asp-append-version="true" />
}

@model Employee

<header >
    <nav id="header" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand col-6 ms-2" asp-area="" asp-controller="Employees" asp-action="Index">
                <img src="~/img/cyd.png" style="width: 90px; ;">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between col-">
                <ul class="navbar-nav flex-grow-1 dropdown d-flex justify-content-end align-items-center">
                    <li class="nav-item">
                        <p style="font-size: 12px;" class="align-items-cente"><b>Welcome @ViewBag.Nombre @ViewBag.LastNames</b></p>
                    </li>
                    <li class="nav-item">
                        <img src="@ViewBag.PhotoProfile" style="width:50px; border-radius:50px " class="ms-2 nav-link">
                    </li>
                    <div class="dropdown-menu" id="menu">
                        <a class="dropdown-item" href="#">History</a>
                        <a class="dropdown-item" asp-controller="Employees" asp-action="Create">Add employee</a>
                        <form asp-controller="Employees" asp-action="Logout" method="post">
                            <button class="dropdown-item" type="submit">Sign Out</button>
                        </form>
                    </div>
                </ul>
            </div>
        </div>  
    </nav>
</header>

<div class="container">
    <div class="row justify-content-center align-items-center " style="height: 100vh;">
        <div class="card col-md-5 shadow">
            <div class="text-center">
                <img class="m-3" src="~/img/cyd.png" style="width: 200px;">
            </div>
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label for="Photo" class="form-label"><b>PhotoProfile:</b></label>
                    <input type="file" id="foto" class="form-control">
                </div>
                <div class="form-group">
                    <label asp-for="Names"><b>Names:</b></label>
                    <input asp-for="Names" class="form-control" />
                    <span asp-validation-for="Names" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastNames"><b>LastNames:</b></label>
                    <input asp-for="LastNames" class="form-control" />
                    <span asp-validation-for="LastNames" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email"><b>Email:</b></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"><b>Password:</b></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="text-center" >
                    <button class="btn btn-outline-dark shadow mt-4 m-3 w-50" >CREAR</button>
                </div>
            </form>
        </div>
    </div> 
</div>

<div class="container col-4">
    <div class="text-center">
        <img class="m-3" src="~/img/cyd.png" style="width: 200px;">
    </div>
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label for="Photo" class="form-label"><b>PhotoProfile:</b></label>
            <input type="file" id="foto" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Names"><b>Names:</b></label>
            <input asp-for="Names" class="form-control" />
            <span asp-validation-for="Names" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastNames"><b>LastNames:</b></label>
            <input asp-for="LastNames" class="form-control" />
            <span asp-validation-for="LastNames" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"><b>Email:</b></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"><b>Password:</b></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div>
            <button type="submit" class="btn btn-outline-black mt-3 text-center">CREAR</button>
        </div>
    </form> 
</div>

<footer class="border-top footer text-muted fixed-bottom" id="footer">
    <div class="container-fluid">
        <div class="row">
            <div class="col-6 text-start">
                &copy; 2024 - Work Entry and Exit System <a href="https://github.com/CristhianDavid0207/Registro-Entrada-y-Salida">Daniel Toro | Cristhian Bermudez</a>
            </div>
            <div class="col-6 text-end">
                <marquee><p><b>Welcome to our spectacular page</b></p></marquee>
            </div>
        </div>
    </div>
</footer>