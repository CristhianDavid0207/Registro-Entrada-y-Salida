@{
    ViewBag.Title = "Home | LogIn";
}

@model Employee

<div class="container">
    <div class="row justify-content-center align-items-center " style="height: 100vh;" >
        <div class="card col-md-5 shadow">
            <h2 class="m-2 text-center">LOGIN</h2>
            @{
                if(!string.IsNullOrEmpty(ViewBag.Message))
                {
                    //Mensaje tiene valor
                    <div class="alert alert-danger m-2">@ViewBag.Message</div>
                }
            }
            <form asp-controller="Home" asp-action="Login" method="post">
                <div class="form-group m-3">
                    <label asp-for="Email"></label>
                    <input class="form-control" name="email" asp-for="Email">
                </div>
                <div class="form-group m-3">
                    <label asp-for="Password"></label>
                    <input class="form-control" type="password" name="password" asp-for="Password">
                </div>
                <div class="text-center" >
                    <button class="btn btn-primary mt-0 m-3 w-50" >Login</button>
                </div>
            </form>
        </div>            
    </div>
</div>
